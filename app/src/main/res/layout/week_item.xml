<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/block_alpha">

    <TextView
        android:id="@+id/week_date_text"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="2023-06-05"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/week_weather_pic"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_light_rain" />

            <TextView
                android:id="@+id/week_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阵雨"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/week_temper_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="27℃~36℃"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/week_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无持续风向"
                android:textSize="18sp" />
            
            <TextView
                android:id="@+id/week_wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3级"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>